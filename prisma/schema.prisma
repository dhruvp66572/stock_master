// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  ADMIN
  MANAGER
  STAFF
}

enum ReceiptStatus {
  DRAFT
  VALIDATED
  CANCELED
}

enum DeliveryStatus {
  DRAFT
  READY
  DONE
  CANCELED
}

enum MovementType {
  RECEIPT
  DELIVERY
  ADJUSTMENT
  TRANSFER
}

// Models
model User {
  id             String          @id @default(cuid())
  email          String          @unique
  password       String
  name           String?
  role           UserRole        @default(STAFF)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  receipts       Receipt[]
  deliveries     Delivery[]
  stockMovements StockMovement[]
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
}

model Warehouse {
  id             String          @id @default(cuid())
  name           String          @unique
  location       String?
  isActive       Boolean         @default(true)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  products       Product[]
  receipts       Receipt[]
  deliveries     Delivery[]
  stockMovements StockMovement[]
}

model Product {
  id             String          @id @default(cuid())
  name           String
  sku            String          @unique
  description    String?
  categoryId     String
  unitOfMeasure  String // e.g., 'kg', 'pcs', 'liters'
  stock          Int             @default(0)
  minStockLevel  Int? // For low stock alerts
  warehouseId    String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  category       Category        @relation(fields: [categoryId], references: [id])
  warehouse      Warehouse       @relation(fields: [warehouseId], references: [id])
  receiptItems   ReceiptItem[]
  deliveryItems  DeliveryItem[]
  stockMovements StockMovement[]

  @@index([sku])
  @@index([categoryId])
  @@index([warehouseId])
}

model Receipt {
  id            String        @id @default(cuid())
  receiptNumber String        @unique
  supplierId    String?
  supplierName  String
  warehouseId   String
  status        ReceiptStatus @default(DRAFT)
  notes         String?
  userId        String
  validatedAt   DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  warehouse     Warehouse     @relation(fields: [warehouseId], references: [id])
  user          User          @relation(fields: [userId], references: [id])
  items         ReceiptItem[]

  @@index([receiptNumber])
  @@index([status])
}

model ReceiptItem {
  id        String   @id @default(cuid())
  receiptId String
  productId String
  quantity  Int
  createdAt DateTime @default(now())
  receipt   Receipt  @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])

  @@unique([receiptId, productId])
}

model Delivery {
  id             String         @id @default(cuid())
  deliveryNumber String         @unique
  customerId     String?
  customerName   String
  warehouseId    String
  status         DeliveryStatus @default(DRAFT)
  notes          String?
  userId         String
  deliveredAt    DateTime?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  warehouse      Warehouse      @relation(fields: [warehouseId], references: [id])
  user           User           @relation(fields: [userId], references: [id])
  items          DeliveryItem[]

  @@index([deliveryNumber])
  @@index([status])
}

model DeliveryItem {
  id         String   @id @default(cuid())
  deliveryId String
  productId  String
  quantity   Int
  createdAt  DateTime @default(now())
  delivery   Delivery @relation(fields: [deliveryId], references: [id], onDelete: Cascade)
  product    Product  @relation(fields: [productId], references: [id])

  @@unique([deliveryId, productId])
}

model StockMovement {
  id          String       @id @default(cuid())
  productId   String
  warehouseId String
  type        MovementType
  quantity    Int // Positive for increase, negative for decrease
  referenceId String? // Links to Receipt/Delivery/etc
  notes       String?
  userId      String
  createdAt   DateTime     @default(now())
  product     Product      @relation(fields: [productId], references: [id])
  warehouse   Warehouse    @relation(fields: [warehouseId], references: [id])
  user        User         @relation(fields: [userId], references: [id])

  @@index([productId])
  @@index([type])
  @@index([createdAt])
}
